<!doctype html>
<html>
  <head>
    <title>ScopeSpeaker (web)</title>
    <script src="https://code.jquery.com/jquery-1.11.3.js"></script>
    <script>
      $(document).ready(function() {
          $("#start_chat").click(function() {
              var username = $('#user').val();
              alert("User name is:" + username);
          });
      });
    </script>
  </head>
  <body>
      <input id="start_chat" type="button" value="Say the chat messages of">
      <input id='user' placeholder='Periscope user name...' />
    <pre id='message'></pre>
  </body>
</html>
